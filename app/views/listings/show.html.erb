        <div class="col d-flex justify-content-start price">
          <p><strong>Price:</strong><%= @listing.price %></p>
        </div>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="container col-10 d-flex justify-content-center bg-light">
          <p class="text-left"><%= @listing.description %></p>
        </div>
      </div>
      <div class="row d-flex my-3">
        <div class="col d-flex justify-content-end">
          <p><strong>State:</strong><%= @states.find(@listing.state_id).title %></p>
        </div>
        <div class="col d-flex justify-content-start">
          <p><strong>Postcode:</strong><%= @postcodes.find(@listing.postcode_id).title %></p>
        </div>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <button type="button" class="btn btn-secondary">Message User</button>
      </div>
    </div>
