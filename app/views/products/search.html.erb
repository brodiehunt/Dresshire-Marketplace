<div class="container">
<%# One row will exist with 2 columns to hold all content %>
  <div class="row" style="min-height: 50vh;">
  <%# This row will hold navigation for messages profile and manage ads %>
    <div class="col-12 col-lg-3 border mt-3">
      <ul class="nav flex-lg-column mt-3 justify-content-center justify-content-lg-start">
        <li class="nav-item">
          <a class="nav-link active" href="#">Profile Settings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Manage Listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Messages</a>
        </li>
      </ul>
    </div>
    <div class="col-12 col-lg-8 border ml-sm-3 mt-3">
      <div class="container-fluid border mt-3 d-flex flex-wrap justify-content-center">
        <% if @products != nil %>
          <% @products.each do |product| %>
            <div class="card col-10 col-sm-5 col-lg-4 my-3">
              <%= image_tag (product.picture if product.picture.attached?), :class => "img-fluid card-img-top", :style => "max-height: 150px;" %>
              <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text"><%= product.description %></p>
                <button class="btn btn-primary">
                  <a href="<%= product_path(product.id) %>">Go to Product</a>
                </button>
              </div>
            </div>
          <% end %>  
          <% else %>
            <p> No products match your search </p>
          <% end %>
      </div> 
    <div>
  </div>
</div>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Style</th>
      <th>Size</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.brand_id %></td>
        <td><%= product.style_id %></td>
        <td><%= product.size_id %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

</div>